<div class="app-card-container">
  <div class="card transparent">
    <h1>About Me</h1>
    <hr>
    <div class="row">
      <div class="col-md-4">
        <%= image_tag "https://avatars2.githubusercontent.com/u/16489757?s=400&u=c62c9ca6fac332fd8a8d9ce72f349532522dd819&v=4", width: 300, alt: 'profile image', id: 'profile-image' %>

        <div class="skills">
          <% @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title  %></h4>
              <div class="progress">
                <div
                class="progress-bar progress-bar-striped bg-warning"
                role="progress-bar"
                aria-valuenow="<%= skill.percent_utilized  %>"
                aria-valuemax="100"
                style="width: <%= skill.percent_utilized  %>%"
                >  
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-md-8">
        <p>My description</p>    

        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controller="jobHistory"
            >
          Job History
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controller="education"
            >
          Education
          </button>
        </p>

        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              Job 1
            </div>
            <div class="card card-block">
              Job 2
            </div>
          </div>
        </p>

        <p>
          <div class="collapse" id="education">
            <div class="card card-block">
              School 1
            </div>
            <div class="card card-block">
              School 2
            </div>
          </div>
        </p>

      </div>  
    </div>
  </div>  
</div>
