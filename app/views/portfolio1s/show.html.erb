<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main' ), height: '400', width: '600' %>    
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title  %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle  %></em>
      <p><%= @portfolio_item.body  %></p>
      <hr>
      <h3>Technologies Used: </h3>
      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name  %></p>
      <% end %>
      <hr>
      <p><%= link_to 'Github Repo', @portfolio_item.name  %></p>

      <% if logged_in?(:site_admin)  %>
        <div>
          <%= link_to 'Edit Item', edit_portfolio1_path(@portfolio_item), class: 'btn btn-warning'  %>
        </div>
        <hr>
        <div>
          <%= link_to 'Delete', @portfolio_item, method: :delete, class: 'btn btn-warning'  %>
        </div>
      <% end  %>     
    </div>
  </div>
</div>
