<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title  %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords  %>">

    <%= stylesheet_link_tag    'portfolio1s', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div>
      <div><%= link_to 'Home', root_path  %></div>
      <div><%= link_to 'About', about_path  %></div>
      <div><%= link_to 'Contact', contact_path  %></div>
      <div><%= link_to 'Blog', blogs_path  %></div>
      <div><%= link_to 'Portfolio', portfolio1s_path  %></div>
    </div>


    <%= login_helper  %>
    
    <%= yield %>

    <% if session[:source] %>
      <p>Thanks for visiting from <%= session[:source]  %></p>
    <% end %>
  </body>
</html>
